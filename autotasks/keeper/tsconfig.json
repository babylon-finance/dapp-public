{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmit": false,
    "target": "es2019",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "shared/*": ["../../shared/*"],
      "common/*": ["../common/*"]
    }
  }
}
